{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "tsconfig.json"
  },
  "monorepo": true,
  "root": ".",
  "projects": {
    "create-user": {
      "type": "application",
      "root": "apps/create-user",
      "entryFile": "main",
      "sourceRoot": "apps/create-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/create-user/tsconfig.app.json"
      }
    },
    "get-user": {
      "type": "application",
      "root": "apps/get-user",
      "entryFile": "main",
      "sourceRoot": "apps/get-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/get-user/tsconfig.app.json"
      }
    },
    "update-user": {
      "type": "application",
      "root": "apps/update-user",
      "entryFile": "main",
      "sourceRoot": "apps/update-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/update-user/tsconfig.app.json"
      }
    }
  }
}